<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/pagetitl16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/sourcesansprosemibold"
            android:gravity="center"
            android:text="@string/calculate_crs_score"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:textColor="@color/dark_slate_blue"
            android:textSize="18sp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="18sp"
            app:autoSizeTextType="uniform" />

        <ImageView
            android:padding="8dp"
            android:id="@+id/btnBackArrow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_icon_back" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="47dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rlHeader">

        <TextView
            android:id="@+id/tvAge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/lightBlue"
            android:gravity="center_vertical"
            android:paddingStart="26dp"
            android:paddingTop="19dp"
            android:paddingBottom="19dp"
            android:text="@string/age"
            android:textColor="@color/dark_slate_blue"
            android:textSize="@dimen/textSize18sp" />

        <TextView
            android:id="@+id/tvAgeScore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="@color/dark_slate_blue"
            android:gravity="center"
            android:paddingTop="19dp"
            android:paddingBottom="19dp"
            android:text="00"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvSelectAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        android:text="@string/select_your_age"
        android:textColor="@color/dark_slate_blue"
        android:textSize="@dimen/textSize18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llAge" />

    <NumberPicker
        android:id="@+id/npAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"
        android:scaleY="1.50"
        android:scaleX="1.50"

        app:layout_constraintTop_toBottomOf="@+id/tvSelectAge" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddAge"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/oval_button_blue"
        android:text="Add Age"
        android:textAllCaps="false"
        android:textColor="@color/dark_slate_blue"
        android:textSize="@dimen/textSize14sp"
        app:layout_constraintTop_toBottomOf="@+id/npAge"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
