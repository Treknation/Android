<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="8dp"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp"
        android:layout_marginBottom="16dp">

        <RelativeLayout
            android:id="@+id/rlHeader"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="@dimen/pagetitl16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/sourcesansprosemibold"
                android:gravity="center"
                android:text="@string/calculate_crs_score"
                android:textAlignment="center"
                android:layout_centerInParent="true"
                android:textColor="@color/dark_slate_blue"
                android:textSize="18sp"
                app:autoSizeMaxTextSize="100sp"
                app:autoSizeMinTextSize="18sp"
                app:autoSizeTextType="uniform" />

            <ImageView
                android:padding="8dp"
                android:id="@+id/btnBackArrow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_icon_back" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="47dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rlHeader">

            <TextView
                android:id="@+id/tvAge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@color/lightBlue"
                android:gravity="center_vertical"
                android:paddingStart="26dp"
                android:paddingTop="19dp"
                android:paddingBottom="19dp"
                android:text="@string/language"
                android:textColor="@color/dark_slate_blue"
                android:textSize="@dimen/textSize18sp" />

            <TextView
                android:id="@+id/tvScore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@color/dark_slate_blue"
                android:gravity="center"
                android:paddingTop="19dp"
                android:paddingBottom="19dp"
                android:text="@string/_0"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPriOrSec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llAge">

            <Button
                android:id="@+id/btnPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/rect_button_line"
                android:text="@string/primary"
                android:textAllCaps="false"
                android:textColor="@color/dark_slate_blue"
                android:textSize="@dimen/textSize18sp" />

            <Button
                android:id="@+id/btnSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="@string/secondary"
                android:background="@null"
                android:textAllCaps="false"
                android:textColor="@color/dark_slate_blue"
                android:textSize="@dimen/textSize18sp" />
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llPriOrSec">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="63dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="62dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlSpinnerPrimary"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <Spinner
                    android:id="@+id/spinnerPrimary"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/rect_button_unselected"
                    android:entries="@array/secondary_primaryLang" />
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/ic_baseline_arrow_drop_down_24"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlSpinnerSecondary"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:visibility="gone">

                <Spinner
                    android:id="@+id/spinnerSecondary"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/rect_button_unselected"
                    android:entries="@array/secondaryLang" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/ic_baseline_arrow_drop_down_24"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_spinner">

            <TextView
                android:id="@+id/tvSpeaking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/speaking"
                android:textColor="@color/dark_slate_blue"
                android:textSize="@dimen/textSize18sp" />

            <TextView
                android:id="@+id/tvSpeakingScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/dark_slate_blue"
                android:textSize="@dimen/textSize14sp" />


            <SeekBar
                android:id="@+id/sb_speaking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:max="10" />

            <TextView
                android:id="@+id/tvListening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Listening"
                android:textColor="@color/dark_slate_blue"
                android:textSize="@dimen/textSize18sp" />

            <TextView
                android:id="@+id/tvListeningScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/dark_slate_blue"
                android:textSize="@dimen/textSize14sp" />


            <SeekBar
                android:id="@+id/sb_Listening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:max="10" />

            <TextView
                android:id="@+id/tvReading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Reading"
                android:textColor="@color/dark_slate_blue"
                android:textSize="@dimen/textSize18sp" />

            <TextView
                android:id="@+id/tvReadingScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/dark_slate_blue"
                android:textSize="@dimen/textSize14sp" />

            <SeekBar
                android:id="@+id/sb_Reading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:max="10" />

            <TextView
                android:id="@+id/tvWriting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Writing"
                android:textColor="@color/dark_slate_blue"
                android:textSize="@dimen/textSize18sp" />

            <TextView
                android:id="@+id/tvWritingeScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/dark_slate_blue"
                android:textSize="@dimen/textSize14sp" />

            <SeekBar
                android:id="@+id/sb_Writing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:max="10" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAddAge"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="68dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="67dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/oval_button_blue"
            android:text="Add Language"
            app:layout_constraintTop_toBottomOf="@+id/llLang"
            android:textColor="@color/dark_slate_blue"
            android:textSize="@dimen/textSize14sp"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
