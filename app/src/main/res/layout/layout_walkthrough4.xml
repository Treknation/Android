<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/onBoarding_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivTrackNationApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70dp"
            android:src="@drawable/onboarding_tracknation_pic" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivDevice"
            android:layout_width="match_parent"
            android:layout_height="189dp"
            android:layout_below="@+id/ivTrackNationApp"
            android:layout_marginTop="85dp"
            android:src="@drawable/ic_earth" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvApplyCanada"
            style="@style/Text.Slate.18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginStart="55dp"
            android:fontFamily="@font/commissioner_thin_medium"
            android:layout_marginEnd="56dp"
            android:layout_below="@+id/ivDevice"
            android:text="@string/inside_canada"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="59dp"
            android:layout_marginEnd="60dp"
            android:layout_marginTop="54dp"
            android:layout_marginBottom="16dp"
            android:layout_below="@+id/tvApplyCanada">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnYes"
                style="@style/OvalButton.Transparent.TextBlue.14sp"
                android:layout_width="0dp"
                android:fontFamily="@font/commissioner_thin_medium"
                android:layout_height="48dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnNo"
                android:text="@string/yes"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNo"
                style="@style/OvalButton.Transparent.TextBlue.14sp"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:fontFamily="@font/commissioner_thin_medium"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnYes"
                android:layout_marginStart="16dp"
                android:text="@string/no"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>
</ScrollView>