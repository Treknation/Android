<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/onBoarding_background"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <ImageView
            android:id="@+id/btnBackArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_alignTop="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            app:srcCompat="@drawable/ic_icon_back" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:autoSizeMaxTextSize="100sp"
            android:autoSizeMinTextSize="12sp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/sourcesansprobold"
            android:gravity="top"
            android:text="Express Entry Results"
            android:textColor="@color/dark_slate_blue"
            android:textSize="18sp"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeTextType="uniform" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            app:cardElevation="@dimen/pagetitl16dp"
            app:cardCornerRadius="100dp"
            app:cardUseCompatPadding="false"
            android:layout_marginTop="30dp">

            <RelativeLayout
                android:id="@+id/rl_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:background="@drawable/circle_background"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sourcesansproregular"
                    android:gravity="center_horizontal"
                    android:text="000"
                    android:textColor="@color/dark_slate_blue"
                    android:textSize="54sp"
                    android:textStyle="normal" />


                <TextView
                    android:id="@+id/txt_hint"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_score"
                    android:layout_alignEnd="@+id/txt_score"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/sourcesansproregular"
                    android:textAlignment="center"
                    android:textColor="@color/dark_slate_blue"
                    android:textSize="20sp"
                    android:textStyle="normal" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txt_draw_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cv_circle"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/sourcesansproregular"
            android:text="16th Nov, 2020"
            android:textColor="@color/dark_slate_blue"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_draw_invited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cv_circle"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/sourcesansproregular"
            android:text="4900 Invited"
            android:textColor="@color/dark_slate_blue"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_recent_draws"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_draw_date"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/sourcesansprobold"
            android:text="Recent Draws"
            android:textColor="@color/dark_slate_blue"
            android:textSize="18sp"
            android:textStyle="normal" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_last_draws"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_recent_draws"
            android:layout_marginTop="10dp"
            tools:listitem="@layout/item_draws_list"/>


        <ProgressBar
            android:id="@+id/progress"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</LinearLayout>