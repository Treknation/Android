<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:layout_margin="8dp"
    android:id="@+id/main_activity">


    <ImageView
        android:id="@+id/home_logo"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/home_logo"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/txtTrekNation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:text="TrekNation"
        android:fontFamily="@font/havania"
        android:textColor="#143d59"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@+id/home_logo"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvEdiText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        app:cardCornerRadius="4dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTrekNation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editTextSearch"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_margin="2dp"
                android:fontFamily="@font/sourcesansproregular"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:hint=" Search here..." />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ivClose"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="match_parent"
                android:imeOptions="actionDone"
                android:text="@string/clear"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/sourcesansprosemibold"
                app:layout_constraintEnd_toEndOf="@+id/editTextSearch"
                app:layout_constraintTop_toBottomOf="@+id/txtTrekNation" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingTop="17dp"
        android:paddingEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_search" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/itemRecView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvEdiText"
        tools:listitem="@layout/item_list_item"
        tools:layout_editor_absoluteX="1dp" />

    <!--    <fragment-->
    <!--        android:id="@+id/mainFragment"-->
    <!--        android:name="com.prod.treknation.MainFragment"-->
