<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rlHeader"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="@dimen/pagetitl16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/sourcesansprosemibold"
                android:gravity="center"
                android:text="@string/calculate_crs_score"
                android:textAlignment="center"
                android:layout_centerInParent="true"
                android:textColor="@color/dark_slate_blue"
                android:textSize="18sp"
                app:autoSizeMaxTextSize="100sp"
                app:autoSizeMinTextSize="18sp"
                app:autoSizeTextType="uniform" />

            <ImageView
                android:padding="8dp"
                android:id="@+id/btnBackArrow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_icon_back" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="47dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rlHeader">

            <TextView
                android:id="@+id/tvAge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@color/lightBlue"
                android:gravity="center_vertical"
                android:paddingStart="26dp"
                android:paddingTop="19dp"
                android:paddingBottom="19dp"
                android:text="@string/additional_points"
                android:textColor="@color/dark_slate_blue"
                android:textSize="@dimen/textSize18sp" />

            <TextView
                android:id="@+id/tvAgeScore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@color/dark_slate_blue"
                android:gravity="center"
                android:paddingTop="19dp"
                android:paddingBottom="19dp"
                android:text="@string/_0"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize18sp" />
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llAge">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/rg_job_offer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:padding="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvSelectAge">

                    <CheckBox
                        android:id="@+id/rb_NOC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/radio_button_background"
                        android:padding="8dp"
                        android:text="NOC - OO"
                        android:textColor="@color/dark_slate_blue" />

                    <CheckBox
                        android:id="@+id/rb_OAB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:button="@drawable/radio_button_background"
                        android:padding="8dp"
                        android:text="NOC - O/A/B"
                        android:textColor="@color/dark_slate_blue" />
                </LinearLayout>

                <RadioGroup
                    android:id="@+id/rg_pr_citizen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:padding="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvSelectPRCitizen">

                    <RadioButton
                        android:id="@+id/rb_Yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/radio_button_background"
                        android:padding="8dp"
                        android:text="Yes"
                        android:textColor="@color/dark_slate_blue" />

                    <RadioButton
                        android:id="@+id/rb_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:button="@drawable/radio_button_background"
                        android:padding="8dp"
                        android:text="No"
                        android:textColor="@color/dark_slate_blue" />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/rg_pr_nomination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:padding="4dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvLetterNomination">

                    <RadioButton
                        android:id="@+id/rb_Yes_nomination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/radio_button_background"
                        android:padding="8dp"
                        android:text="Yes"
                        android:textColor="@color/dark_slate_blue" />

                    <RadioButton
                        android:id="@+id/rb_no_nomination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:button="@drawable/radio_button_background"
                        android:padding="8dp"
                        android:text="No"
                        android:textColor="@color/dark_slate_blue" />
                </RadioGroup>

                <TextView
                    android:id="@+id/tvSelectAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="48dp"
                    android:layout_marginTop="31dp"
                    android:text="@string/job_offer"
                    android:textColor="@color/dark_slate_blue"
                    android:textSize="@dimen/textSize18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvSelectPRCitizen"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="48dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginEnd="23dp"
                    android:text="@string/pr_citizen"
                    android:textColor="@color/dark_slate_blue"
                    android:textSize="@dimen/textSize18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rg_job_offer" />

                <TextView
                    android:id="@+id/tvLetterNomination"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="48dp"
                    android:layout_marginTop="31dp"
                    android:layout_marginEnd="23dp"
                    android:text="@string/do_you_have_a_letter_of_nomination_from_province"
                    android:textColor="@color/dark_slate_blue"
                    android:textSize="@dimen/textSize18sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rg_pr_citizen" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAddAdditionalPoints"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="68dp"
                    android:layout_marginTop="31dp"
                    android:layout_marginEnd="67dp"
                    android:layout_marginBottom="80dp"
                    android:background="@drawable/oval_button_blue"
                    android:text="Add Additional Points"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_slate_blue"
                    android:textSize="@dimen/textSize14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rg_pr_nomination" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
