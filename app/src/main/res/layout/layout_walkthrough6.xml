<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/walkthrough_5_background">

    <ImageView
        android:id="@+id/ivJourney"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_launcher_foreground"
        android:layout_marginTop="225dp"/>

    <TextView
        android:id="@+id/tvWelcomeTitle"
        style="@style/Text.Slate.24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/sourcesansprosemibold"
        android:layout_marginEnd="56dp"
        android:layout_below="@+id/ivJourney"
        android:text="@string/hold_tight_soham_we_are_personalizing_your_journey" />
</RelativeLayout>