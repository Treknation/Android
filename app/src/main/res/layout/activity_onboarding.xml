<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/onBoarding_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:attrs="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/flContainer"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/rlIntroSliding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.prod.treknation.TNViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_above="@+id/pageIndicatorView"/>

        <com.rd.PageIndicatorView
            android:id="@+id/pageIndicatorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:paddingBottom="32dp"
            android:paddingTop="4dp"
            android:layout_centerHorizontal="true"
            app:piv_animationType="fill"
            app:piv_dynamicCount="true"
            app:piv_interactiveAnimation="true"
            app:piv_selectedColor="@color/dark_slate_blue"
            app:piv_unselectedColor="@color/dark_slate_blue"
            app:piv_viewPager="@id/view_pager"
            attrs:piv_padding="12dp"
            attrs:piv_radius="6dp" />
    </RelativeLayout>
</RelativeLayout>