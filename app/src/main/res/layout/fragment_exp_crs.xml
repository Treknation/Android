<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp">

        <RelativeLayout
            android:id="@+id/rlHeader"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="@dimen/pagetitl16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/sourcesansprosemibold"
                android:gravity="center"
                android:text="@string/calculate_crs_score"
                android:textAlignment="center"
                android:layout_centerInParent="true"
                android:textColor="@color/dark_slate_blue"
                android:textSize="18sp"
                app:autoSizeMaxTextSize="100sp"
                app:autoSizeMinTextSize="18sp"
                app:autoSizeTextType="uniform" />

            <ImageView
                android:padding="8dp"
                android:id="@+id/btnBackArrow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_icon_back" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llExp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="47dp"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rlHeader">

            <TextView
                android:id="@+id/tvAge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@color/lightBlue"
                android:fontFamily="@font/commissioner_thin_medium"
                android:gravity="center_vertical"
                android:paddingStart="26dp"
                android:paddingTop="19dp"
                android:paddingBottom="19dp"
                android:text="@string/work_experience"
                android:textColor="@color/dark_slate_blue"
                android:textSize="@dimen/textSize18sp" />

            <TextView
                android:id="@+id/tvAgeScore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@color/dark_slate_blue"
                android:fontFamily="@font/commissioner_thin_medium"
                android:gravity="center"
                android:paddingTop="19dp"
                android:paddingBottom="19dp"
                android:text="@string/_0"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize18sp" />
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="47dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llExp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/llLang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tvSpeaking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/hindsemibold"
                        android:text="@string/canadian_experience"
                        android:textColor="@color/dark_slate_blue"
                        android:textSize="@dimen/textSize18sp" />

                    <TextView
                        android:id="@+id/tvWorkExp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19dp"
                        android:fontFamily="@font/commissioner_thin_medium"
                        android:gravity="center"
                        android:text="0 Year"
                        android:textColor="@color/dark_slate_blue"
                        android:textSize="@dimen/textSize14sp" />

                    <SeekBar
                        android:id="@+id/sbcanadaian_experience"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:layout_marginTop="20dp"
                        android:max="5" />

                    <TextView
                        android:id="@+id/tvListening"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="54dp"
                        android:fontFamily="@font/hindsemibold"
                        android:text="@string/foreign_experience"
                        android:textColor="@color/dark_slate_blue"
                        android:textSize="@dimen/textSize18sp" />

                    <TextView
                        android:id="@+id/tvForeignExp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19dp"
                        android:fontFamily="@font/hindsemibold"
                        android:gravity="center"
                        android:text="3 year"
                        android:textColor="@color/dark_slate_blue"
                        android:textSize="@dimen/textSize14sp" />

                    <SeekBar
                        android:id="@+id/sbforeignExp"
                        android:layout_width="match_parent"
                        android:layout_height="16dp"
                        android:layout_marginTop="20dp"
                        android:max="3" />

                    <TextView
                        android:id="@+id/tvCertiOfQualifi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="34dp"
                        android:fontFamily="@font/sourcesansprosemibold"
                        android:text="@string/certificate_of_qualification"
                        android:textColor="@color/dark_slate_blue"
                        android:textSize="@dimen/textSize18sp" />

                    <RadioGroup
                        android:id="@+id/cb_certi_qualification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/cb_certi_qualification_yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:button="@drawable/radio_button_background"
                            android:padding="8dp"
                            android:text="@string/yes"
                            android:textColor="@color/dark_slate_blue"
                            android:textSize="@dimen/textSize18sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/cb_HighSchool" />

                        <RadioButton
                            android:id="@+id/cb_certi_qualification_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:button="@drawable/radio_button_background"
                            android:padding="8dp"
                            android:text="@string/no"
                            android:textColor="@color/dark_slate_blue"
                            android:textSize="@dimen/textSize18sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/cb_HighSchool" />
                    </RadioGroup>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnAddExp"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="68dp"
                    android:layout_marginTop="31dp"
                    android:layout_marginEnd="67dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/oval_button_blue"
                    android:fontFamily="@font/hindsemibold"
                    android:text="@string/add_experience"
                    android:textAllCaps="false"
                    android:textColor="@color/dark_slate_blue"
                    android:textSize="@dimen/textSize14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/llLang" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
